.ticket {
  border: 1px solid black;
  border-radius: 3px;
  padding: 0 0.5rem;
  line-height: 1.5rem;
  text-align: center;
  display: inline-block;

  &.taxi {
    color: black !important;
    background-color: yellow !important;
  }
  &.bus {
    color: black !important;
    background-color: limegreen !important;
  }
  &.underground {
    background-color: red !important;
    color: white !important;
  }
  &.black {
    background-color: black !important;
    color: white !important;
  }
  &.double {
    background-color: orange !important;
    color: white !important;
  }
}

section.head-bar {
  background-color: lightgray;
  box-shadow: 0 0 3px black;
  line-height: 2.5rem;
  height: 2.5rem;

  > ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: nowrap;

    > li {
      flex: 0 1 auto;
      padding-left: 0.5rem;

      &.turn {
        > .turn-name {
          border: 1px solid black;
          border-radius: 3px;
          padding: 0.4rem 1.5rem;
          margin-left: 0.5rem;
        }
        &.thief > .turn-name {
          background-color: black;
          color: white;
        }
      }
    }
  }
}

section.polices {
  height: 7rem;
  padding: 0.5rem;

  > ul {
    height: 100%;
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: nowrap;

    > li {
      flex: 1 1 20%;
      margin: 0.5rem;
      padding: 0.5rem;
      border-radius: 3px;
      // border: 7px solid;
      border: 1px solid black;
      transition: .25s;
      text-align: center;

      &.active {
        box-shadow: 0 2px 10px gray;
      }
      &.inactive {
        opacity: 0.4;
      }

      &.red {
        background-color: red;
        color: white;
      }
      &.blue {
        background-color: lightblue;
      }
      &.yellow {
        background-color: yellow;
      }
      &.green {
        background-color: limegreen;
      }
      &.black {
        background-color: gray;
        color: white;
      }

      > .status {
        span {
          display: inline-block;
        }
        .ticket {

        }
      }

      > ul.tickets {
        list-style: none;
        margin: 0;
        padding: 0;
        padding-top: 0.5rem;
        display: flex;
        flex-wrap: nowrap;

        > li {
          flex: 1 1 33%;
          margin: 0 0.2rem;
        }
      }
    }
  }
}

.field-history {
  display: flex;
  flex-wrap: nowrap;
}

section.field {
  flex: 1 1 100%;
  height: calc(100vh - 9.5rem);
}

section.thief-history {
  flex: 0 0 200px;
  height: calc(100vh - 9.5rem);

  background-color: lightgray;
  // border: 2px dashed black;
  box-shadow: inset 0 0 10px black;

  > .status {
    height: 4rem;
    line-height: 2rem;
    text-align: center;

    > ul {
      list-style: none;
      margin: 0;
      padding: 0;
      text-align: center;

      > li {
        display: inline-block;
      }
    }
  }

  > ul {
    height: calc(100% - 4rem);
    overflow: scroll;
    list-style: none;
    padding: 0;
    margin: 0;

    > li {
      margin: 0.3rem 0.5rem;
      line-height: 2.5rem;

      > .number {
        font-weight: bold;

        &.show {
          &::before {
            content: "[";
          }
          &::after {
            content: "]";
          }
        }
      }

      > .ticket {
        display: inline-block;
      }
    }
  }
}
